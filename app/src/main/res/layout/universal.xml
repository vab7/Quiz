<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_bg" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_back_levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:padding="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/button_stroke_white_press_blue"
                    android:text="@string/back" />

                <TextView
                    android:id="@+id/text_levels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="@string/level" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/point1"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point2"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point3"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point4"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point5"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point6"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point7"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point8"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point9"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point10"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point11"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point12"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point13"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point14"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point15"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point16"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point17"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point18"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point19"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>
                <TextView
                    android:id="@+id/point20"
                    android:layout_weight="1"
                    android:background="@drawable/style_points"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_left"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/style_img_universal"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_imgtest" />
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/style_img_universal"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_imgtest" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Text left" />
                <TextView
                    android:id="@+id/text_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Text right" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>